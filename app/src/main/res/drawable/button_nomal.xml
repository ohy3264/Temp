<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <layer-list>
      <item android:id="@+id/outerColor" android:bottom="1dp" android:right="1dp">
        <shape>
          <solid android:color="?attr/colorPrimaryDark"/>
          <corners android:radius="3dip"/>
        </shape>
      </item>
    </layer-list>
  </item>
  <item>
    <layer-list>
      <!-- CONTENT LAYER -->
      <item android:id="@+id/innerColor"  android:bottom="1dp" android:right="1dp">
        <shape>
          <solid android:color="?attr/colorAccent"/>
          <corners android:radius="3dip"/>

        </shape>
      </item>
    </layer-list>
  </item>
</selector>