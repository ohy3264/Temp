<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/progress">
    <rotate
        android:fromDegrees="270"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="270">
      <shape
          android:innerRadiusRatio="2.5"
          android:shape="ring"
          android:thicknessRatio="15.0"
          android:useLevel="true">
        <gradient
            android:angle="120"
            android:centerColor="@color/red_lebel"
            android:endColor="@color/red_lebel"
            android:startColor="@color/red_lebel"
            android:type="sweep"/>
      </shape>
    </rotate>
  </item>
  <item android:id="@android:id/secondaryProgress">
    <rotate
        android:fromDegrees="270"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="270">
      <shape
          android:innerRadiusRatio="2.5"
          android:shape="ring"
          android:thicknessRatio="15.0"
          android:useLevel="true">
        <gradient
            android:angle="120"
            android:centerColor="@color/light_red"
            android:endColor="@color/light_red"
            android:startColor="@color/light_red"
            android:type="sweep"/>
      </shape>
    </rotate>
  </item>
</layer-list>