<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lin_new_work"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/blue_gray_action"
              android:orientation="vertical">

  <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar"/>

  <ScrollView
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="9"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

      <LinearLayout
          android:padding="5dp"
          android:layout_margin="10dp"
          android:background="@drawable/actionbar_bg"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 근무시간은"
                    android:textSize="12.0dip"
                    android:textColor="@color/dark_gray"
                    android:id="@+id/textView75" />

                <TextView
                    android:id="@+id/txtWorkedHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:text="0"
                    android:textColor="?attr/colorPrimaryDark"
                    android:textSize="25.0dip"/>

                <TextView
                    android:textSize="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간"
                    android:textColor="@color/dark_gray"/>

                <TextView
                    android:id="@+id/txtWorkedMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:text="0"
                    android:textColor="?attr/colorPrimaryDark"
                    android:textSize="25.0dip"/>

                <TextView
                    android:textSize="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분 이며"
                    android:textColor="@color/dark_gray"/>

            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/linRemainWorkedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        android:id="@+id/txtRemainWorked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3.0dip"
                        android:text="0"
                        android:textColor="?attr/colorAccent"
                        android:textSize="25.0dip"/>

                    <FrameLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:visibility="visible"
                            android:id="@+id/txtRemainWorkedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="퇴근까지\n남은시간"
                            android:textColor="@color/dark_gray"
                            android:textSize="12.0dip"/>

                        <LinearLayout
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.hw.oh.utility.DigitTextView
                                android:id="@+id/digitTextView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text=" : "
                                android:textColor="@color/dark_gray"
                                android:id="@+id/textView85" />

                            <com.hw.oh.utility.DigitTextView
                                android:id="@+id/digitTextView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text=" : "
                                android:textColor="@color/dark_gray"
                                android:id="@+id/textView86" />

                            <com.hw.oh.utility.DigitTextView
                                android:id="@+id/digitTextView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:gravity="center"
              android:orientation="horizontal">

            <TextView
                android:id="@+id/txtGabulcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18.0dip"
                android:text="예상 급여는"
                android:textSize="12.0dip"
                android:textColor="@color/dark_gray"/>

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:text="0"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="25.0dip"/>

            <TextView
                android:textSize="12.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원 입니다."
                android:textColor="@color/dark_gray"/>
          </LinearLayout>

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:background="?attr/colorAccent"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:text="시급 "
              android:textColor="@color/material_white_2"/>

          <EditText
              android:id="@+id/edtHourMoney"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginRight="10dp"
              android:layout_weight="6"
              android:ems="10"
              android:inputType="number"
              android:text="0"
              android:textColor="@color/material_white_2"/>

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:padding="10dp"
              android:text="원 "
              android:textColor="@color/material_white_2"
              android:id="@+id/textView71"/>
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/circleview_newwork"
            android:orientation="horizontal">

          <com.balysv.materialripple.MaterialRippleLayout
              android:id="@+id/ripple1"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="bottom">

            <LinearLayout
                android:id="@+id/linStartTime"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

              <LinearLayout
                  android:layout_width="3dp"
                  android:layout_height="fill_parent"
                  android:layout_margin="5dp"
                  android:background="?attr/colorAccent"
                  android:orientation="horizontal"/>

              <LinearLayout
                  android:layout_margin="10dp"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtStartDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="시작"
                    android:textColor="@color/material_white_2"/>


                <TextView
                    android:id="@+id/txtStartTime_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="9"
                    android:textColor="@color/material_white_2"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:text="시"
                    android:textColor="@color/material_white_2"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txtStartTime_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textColor="@color/material_white_2"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:text="분"
                    android:textColor="@color/material_white_2"
                    android:textSize="15sp"/>
              </LinearLayout>

            </LinearLayout>

          </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circleview_newwork"
            android:orientation="horizontal">

          <com.balysv.materialripple.MaterialRippleLayout
              android:id="@+id/ripple2"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="bottom">

            <LinearLayout
                android:id="@+id/linEndTime"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

              <LinearLayout
                  android:layout_width="3dp"
                  android:layout_height="fill_parent"
                  android:layout_margin="5dp"
                  android:background="?attr/colorAccent"
                  android:orientation="horizontal"/>

              <LinearLayout
                  android:layout_margin="10dp"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical|center_horizontal"
                  android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/txtEndDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="종료"
                    android:textColor="@color/material_white_2"/>

                <TextView
                    android:id="@+id/txtEndTime_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="18"
                    android:textColor="@color/material_white_2"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:text="시"
                    android:textColor="@color/material_white_2"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txtEndTime_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textColor="@color/material_white_2"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:text="분"
                    android:textColor="@color/material_white_2"
                    android:textSize="15sp"/>
              </LinearLayout>

            </LinearLayout>

          </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>

      </LinearLayout>
      <LinearLayout
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <LinearLayout
              android:layout_marginRight="5dp"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:background="@drawable/circleview_newwork"
              android:gravity="center_vertical"
              android:orientation="horizontal">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/ripple0"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom">

              <LinearLayout
                  android:id="@+id/linGabulValue"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linGabullebel"
                    style="?lebel"
                    android:layout_width="3dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                  <TextView
                      android:paddingTop="10dp"
                      android:paddingBottom="10dp"
                      android:id="@+id/txtReceiveinAdvance"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="가불 "
                      android:textColor="@color/material_white_2"/>

                  <CheckBox
                      android:id="@+id/chk_receviceInAdvance"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                  <TextView
                      android:id="@+id/txtGabulMoney"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0"
                      android:layout_marginLeft="10dp"
                      android:textColor="@color/material_white_2"
                      android:textSize="12sp"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:text="원 "
                      android:textColor="@color/material_white_2"
                      android:textSize="12sp"/>
                </LinearLayout>

              </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
          </LinearLayout>
          <LinearLayout
              android:layout_marginLeft="5dp"
              android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circleview_newwork"
            android:gravity="center_vertical"
            android:orientation="horizontal">

          <com.balysv.materialripple.MaterialRippleLayout
              android:id="@+id/ripple9"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:gravity="bottom">

            <LinearLayout
                android:id="@+id/linAddTime"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

              <LinearLayout
                  android:id="@+id/linAddTimelebel"
                  style="?lebel"
                  android:layout_width="3dp"
                  android:layout_height="fill_parent"
                  android:layout_margin="5dp"
                  android:orientation="horizontal"/>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:padding="10dp">

                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연장 "
                    android:textColor="@color/material_white_2"/>

                <CheckBox
                    android:id="@+id/chk_addMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:paddingBottom="10dp"
                  android:paddingTop="10dp">

                <TextView
                    android:id="@+id/txtAddMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="@color/material_white_2"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="원"
                    android:textColor="@color/material_white_2"
                    android:textSize="12sp"/>

              </LinearLayout>

            </LinearLayout>
          </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <LinearLayout
              android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circleview_newwork"
            android:orientation="vertical">

          <com.balysv.materialripple.MaterialRippleLayout
              android:id="@+id/ripple10"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:gravity="bottom">

            <LinearLayout
                android:id="@+id/linNightTime"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

              <LinearLayout
                  android:id="@+id/linNightlebel"
                  style="?lebel"
                  android:layout_width="3dp"
                  android:layout_height="fill_parent"
                  android:layout_margin="5dp"
                  android:orientation="horizontal"/>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:padding="10dp">

                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="야간 "
                    android:textColor="@color/material_white_2"/>

                <CheckBox
                    android:id="@+id/chk_nightMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:paddingBottom="10dp"
                  android:paddingTop="10dp">

                <TextView
                    android:id="@+id/txtNightMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/material_white_2"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="원"
                    android:textColor="@color/material_white_2"
                    android:textSize="12sp"/>

              </LinearLayout>
            </LinearLayout>

          </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>

          <LinearLayout
              android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circleview_newwork"
            android:gravity="center_vertical"
            android:orientation="horizontal">

          <com.balysv.materialripple.MaterialRippleLayout
              android:id="@+id/ripple8"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"

              android:gravity="bottom">

            <LinearLayout
                android:id="@+id/linEtc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

              <LinearLayout
                  android:id="@+id/linEtclebel"
                  style="?lebel"
                  android:layout_width="3dp"
                  android:layout_height="fill_parent"
                  android:layout_margin="5dp"
                  android:orientation="horizontal"/>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="건당 "
                    android:textColor="@color/material_white_2"/>

                <CheckBox
                    android:id="@+id/chk_etcMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:paddingBottom="10dp"
                  android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                  <TextView
                      android:id="@+id/txtEtcMoney"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:ellipsize="marquee"
                      android:singleLine="true"
                      android:text="0"
                      android:textColor="@color/material_white_2"
                      android:textSize="12sp"/>

                  <TextView
                      android:id="@+id/textView38"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:ellipsize="marquee"
                      android:singleLine="true"
                      android:text="원"
                      android:textColor="@color/material_white_2"
                      android:textSize="12sp"/>
                </LinearLayout>

              </LinearLayout>
            </LinearLayout>

          </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>
      </LinearLayout>

        <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/circleview_newwork"
            android:elevation="3dp"
            android:orientation="vertical">

          <com.balysv.materialripple.MaterialRippleLayout
              android:id="@+id/ripple12"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:gravity="bottom">

            <LinearLayout
                android:id="@+id/linRefreshTime"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

              <LinearLayout
                  android:id="@+id/linRefreshlebel"
                  android:layout_width="3dp"
                  android:layout_height="fill_parent"
                  android:layout_margin="5dp"
                  style="?lebel"
                  android:orientation="horizontal"/>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:padding="10dp">

                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="휴식 "
                    android:textColor="@color/material_white_2"/>

                <CheckBox
                    android:id="@+id/chk_refreshTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:orientation="vertical"
                  android:paddingBottom="5dp"
                  android:paddingTop="5dp">

                <TextView
                    android:id="@+id/txtRefreshView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="4시간마다"
                    android:textColor="@color/material_white_2"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/txtRefreshView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="30분 휴식 "
                    android:textColor="@color/material_white_2"
                    android:textSize="10sp"/>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="right"
                  android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                  <include layout="@layout/selector_sex"/>


                </LinearLayout>
              </LinearLayout>

            </LinearLayout>

          </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>

      </LinearLayout>
      <LinearLayout
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@drawable/circleview_newwork"
          android:orientation="vertical">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple11"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom">

          <LinearLayout
              android:id="@+id/linWeek"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linWeeklebel"
                style="?lebel"
                android:layout_width="3dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:text="주휴 "
                  android:textColor="@color/material_white_2"/>

              <CheckBox
                  android:id="@+id/chk_WeekMoney"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

              <TextView
                  android:id="@+id/txtWeekMoney"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:ellipsize="marquee"
                  android:singleLine="true"
                  android:text="0"
                  android:textColor="@color/material_white_2"
                  android:textSize="12sp"/>
            </LinearLayout>
          </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>
      </LinearLayout>


      <LinearLayout
          android:id="@+id/linMemo"
          android:layout_width="fill_parent"
          android:layout_height="120dp"
          android:orientation="vertical"
          android:padding="10dp">

        <EditText
            android:id="@+id/edtMemo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:gravity="top"
            android:hint="메모"
            android:textColor="@color/background_floating_material_dark"
            android:textColorHint="@color/gray"/>

      </LinearLayout>


      <LinearLayout
          android:visibility="gone"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_gravity="bottom"
          android:layout_margin="5dp"
          android:layout_weight="0.8"
          android:background="@drawable/circleview_newwork"
          android:gravity="right">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom">

          <LinearLayout
              android:id="@+id/linSave"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="저장하기"
                android:textColor="@color/material_white_2"
                android:textSize="16sp"/>

          </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>


      </LinearLayout>

    </LinearLayout>

  </ScrollView>

  <LinearLayout
      android:id="@+id/mainLayout"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_gravity="center_horizontal"
      android:layout_weight="1"
      android:background="@color/material_white_1"
      android:gravity="bottom"
      android:orientation="vertical"
      android:visibility="gone"/>

</LinearLayout>