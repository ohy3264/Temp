<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/material_dialog_background"
              android:padding="10dp">

  <LinearLayout
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_money"/>

    <TextView
        android:id="@+id/dig_txtStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="2015년 최저임금"
        android:textSize="20sp"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_vertical|center_horizontal"
          android:orientation="horizontal">


        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="적용기간 : 2015 1. 1 ~ 2015. 12. 31"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15sp"/>
      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/dark_gray"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_vertical|center_horizontal"
          android:orientation="horizontal">

        <TextView
            android:padding="3dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="기 준"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/dig_txtpm2_5Value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:gravity="center_vertical|center_horizontal"
            android:text="급 여"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_margin="2dp"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/gray"
          android:orientation="horizontal"/>

      <LinearLayout

          android:padding="3dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_vertical|center_horizontal"
          android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="최저시급"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:gravity="center_vertical|center_horizontal"
            android:text="5,580 원"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp"/>
      </LinearLayout>

      <LinearLayout
          android:layout_margin="2dp"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/gray"
          android:orientation="horizontal"/>

      <LinearLayout
          android:padding="3dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_vertical|center_horizontal"
          android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="일급(8시간 기준)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:gravity="center_vertical|center_horizontal"
            android:text="44,640 원"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp"/>
      </LinearLayout>

      <LinearLayout
          android:layout_margin="2dp"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/gray"
          android:orientation="horizontal"/>

      <LinearLayout
          android:padding="3dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_vertical|center_horizontal"
          android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="월급(주40시간 기준)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textView27"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:gravity="center_vertical|center_horizontal"
            android:text="1,166,220 원"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp"/>
      </LinearLayout>

      <LinearLayout
          android:paddingLeft="3dp"
          android:paddingBottom="3dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="월 4.35주 기준 주휴수당 포함"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp"/>

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:gravity="right"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_marginRight="10dp"
        android:gravity="bottom"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/ripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <TextView

          android:textColor="@color/accent_material_dark"
          android:padding="15dp"
          android:textSize="15dp"
          android:gravity="center_vertical|right"
          android:id="@+id/btnOk"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="확인"/>
    </com.balysv.materialripple.MaterialRippleLayout>

  </LinearLayout>

</LinearLayout>