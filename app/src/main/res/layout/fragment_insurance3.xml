<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

  <ScrollView
      android:background="@color/blue_gray_action"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/scrollView3">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_weight="8"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputLayout

                    android:paddingBottom="3.0dip"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textColorHint="@color/material_white_2"
                        android:textColor="@color/material_white_2"
                        android:id="@+id/edtInputMonthPay"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="  월 급여를 입력하세요"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:paddingBottom="10dp"
                    android:gravity="bottom"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="원"
                    android:textColor="@color/material_white_2"
                    android:id="@+id/textView20"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <include layout="@layout/selector_insurance3"/>


        </LinearLayout>

      </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            style="?button_nomal"
            android:gravity="right|bottom"
            android:orientation="vertical">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/ripple4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom">

                <LinearLayout

                    android:id="@+id/btnCalculation"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txtSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="계산"
                        android:textColor="@color/material_white_2"
                        android:textSize="16sp"/>

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center_vertical"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

          <TextView
              android:id="@+id/textView33"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_marginRight="1dp"
              android:layout_weight="4"
              style="?light_back"
              android:gravity="center"
              android:text="근로자 부담액"
              android:textColor="@color/dark_gray"
              android:textSize="11sp"/>

          <EditText
              android:id="@+id/edtWokerPay"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="5"
              android:background="@color/material_white_2"
              android:enabled="false"
              android:gravity="right"
              android:paddingBottom="5dp"
              android:paddingRight="10dp"
              android:paddingTop="5dp"
              android:textColor="@color/dark_gray"/>

          <TextView
              android:id="@+id/textView21"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:text="원"
              android:textColor="@color/material_white_2"
              android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

          <TextView
              android:id="@+id/textView34"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_marginRight="1dp"
              android:layout_weight="4"
              style="?light_back"
              android:gravity="center"
              android:text="사업주 부담액"
              android:textColor="@color/dark_gray"
              android:textSize="11sp"/>

          <EditText
              android:id="@+id/edtonwerPay"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="5"
              android:background="@color/material_white_2"
              android:enabled="false"
              android:gravity="right"
              android:paddingBottom="5dp"
              android:paddingRight="10dp"
              android:paddingTop="5dp"
              android:textColor="@color/dark_gray"/>

          <TextView
              android:id="@+id/textView62"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:text="원"
              android:textColor="@color/material_white_2"
              android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

          <TextView
              android:id="@+id/textView55"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_marginRight="1dp"
              android:layout_weight="4"
              style="?light_back"
              android:gravity="center"
              android:text="총 액"
              android:textColor="@color/dark_gray"
              android:textSize="11sp"/>

          <EditText
              android:id="@+id/edtTotalPay"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="5"
              android:background="@color/material_white_2"
