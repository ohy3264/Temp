<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/blue_gray_action"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <TextView
      android:elevation="5dp"
      android:padding="1dp"
      android:background="@color/material_red_action"
      android:textColor="@color/white"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:singleLine="true"
      android:ellipsize="marquee"
      android:textSize="11sp"
      android:id="@+id/txtGuide"/>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:background="@android:color/transparent">

    <android.support.design.widget.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/fabNewTalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mode_edit_white_48dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="bottom|right"
        app:fabSize="normal"/>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ListView

          android:persistentDrawingCache="animation|scrolling"
          android:layoutAnimation="@anim/anim_layout_controller"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:id="@+id/mainlistView"
          android:scrollbars="none"/>


    </android.support.v4.widget.SwipeRefreshLayout>

    <com.rey.material.widget.ProgressView
        android:visibility="gone"
        android:id="@+id/progressBar"
        app:pv_progressStyle="@style/ColorsCircularProgressDrawableStyle"
        app:pv_progressMode="indeterminate"
        app:pv_autostart="true"
        app:pv_circular="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="30dp"
        android:indeterminate="false"/>
  </FrameLayout>


</LinearLayout>