<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/blue_gray_action"
              android:orientation="vertical"
              android:paddingLeft="3.0dip"
              android:paddingRight="3.0dip"
              android:id="@+id/header_barchart">


  <LinearLayout
      android:layout_marginTop="4dp"
      android:layout_marginBottom="4dp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <LinearLayout
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="@drawable/circleview_newwork"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
      <com.balysv.materialripple.MaterialRippleLayout
          android:id="@+id/ripple5"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:padding="10dp">

        <LinearLayout
            android:id="@+id/btn_calendar_period_start"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/txt_calendar_period_start"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal|center"
              android:text="기간선택"
              android:textColor="@color/material_white_2"
              android:textSize="16sp"/>

        </LinearLayout>

      </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="@drawable/circleview_newwork"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

      <com.balysv.materialripple.MaterialRippleLayout
          android:id="@+id/ripple6"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:padding="10dp">

        <LinearLayout
            android:id="@+id/btn_calendar_period_end"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/txt_calendar_period_end"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal|center"
              android:text="기간선택"
              android:textColor="@color/material_white_2"
              android:textSize="16sp"/>

        </LinearLayout>

      </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>
  </LinearLayout>

</LinearLayout>
