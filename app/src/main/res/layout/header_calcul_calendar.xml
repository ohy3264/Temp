<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/blue_gray_action"
              android:orientation="vertical"
              android:paddingBottom="5.0dip"
              android:paddingLeft="3.0dip"
              android:paddingRight="3.0dip">


  <LinearLayout
      android:layout_marginTop="4dp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <LinearLayout
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        style="?button_nomal"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/btn_calendar_period_start"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_calendar_period_start"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal|center"
                    android:text="기간선택"
                    android:textColor="@color/material_white_2"
                    android:textSize="16sp"/>

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        style="?button_nomal"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/btn_calendar_period_end"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_calendar_period_end"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal|center"
                    android:text="기간선택"
                    android:textColor="@color/material_white_2"
                    android:textSize="16sp"/>

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:elevation="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:background="@drawable/selector_list_row"
      android:gravity="center_vertical"
      android:orientation="vertical"
      android:padding="10dp">

    <LinearLayout
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:src="@drawable/icon_tag"/>

      <TextView
          android:id="@+id/txt_albaname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="오효완"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="@color/dark_gray"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <LinearLayout
          android:layout_marginTop="5dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginRight="1dp"
            style="?light_back"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:text="근무일수"
            android:id="@+id/textView58"/>

        <TextView
            android:layout_marginRight="1dp"
            android:background="?attr/background"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:text="근무시간"
            android:id="@+id/textView59"/>

        <TextView
            style="?light_back"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:text="급여"
            android:id="@+id/textView60"/>

      </LinearLayout>

      <LinearLayout
          android:layout_marginBottom="1dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTotalDay"
            android:layout_marginRight="1dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/material_white_1"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="0일"/>

          <LinearLayout
              android:layout_marginRight="1dp"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_weight="3"
              android:layout_height="match_parent">

              <TextView
                  android:layout_marginRight="1dp"
                  android:background="@color/material_white_1"
                  android:gravity="center"
                  android:textColor="@color/dark_gray"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:textSize="10sp"
                  android:id="@+id/txtTotalTime"
                  android:text="127시간"/>
              <TextView android:layout_marginRight="1dp"
                        android:background="@color/material_white_1" android:gravity="center"
                        android:textColor="@color/dark_gray" android:layout_weight="1"
                        android:layout_width="match_parent" android:layout_height="match_parent"
                        android:textSize="10sp" android:id="@+id/txtTotalADDTime"
                        android:text="127시간"/>
              <TextView android:layout_marginRight="1dp"
                        android:background="@color/material_white_1" android:gravity="center"
                        android:textColor="@color/dark_gray" android:layout_weight="1"
                        android:layout_width="match_parent" android:layout_height="match_parent"
                        android:textSize="10sp" android:id="@+id/txtTotalRefreshTime"
                        android:text="127시간"/>
          </LinearLayout>

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/material_white_1"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:id="@+id/txtTotalMoney"/>
      </LinearLayout>
    </LinearLayout>

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <LinearLayout
          android:id="@+id/linDuty"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="1dp"
            style="?light_back"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:text="소득세(주민세 포함)"
            android:id="@+id/textView61"/>

        <TextView
            android:background="@color/material_white_1"
            android:textColor="@color/light_red"
            android:gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text=""
            android:id="@+id/txtDutyResult"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/linInsurance"
          android:layout_marginTop="1dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

          <TextView
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:layout_marginRight="1dp"
              style="?light_back"
              android:textColor="@color/dark_gray"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textSize="11sp"
              android:text="4대보험"
              android:id="@+id/textView65"/>

          <LinearLayout
              android:layout_marginRight="1dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

            <TextView
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginRight="1dp"
                style="?light_back"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text="국민연금"
                android:id="@+id/textView64"/>

            <TextView
                android:background="@color/material_white_1"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text=""
                android:id="@+id/txtInsurance1"/>
          </LinearLayout>

          <LinearLayout
              android:layout_marginRight="1dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <TextView
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginRight="1dp"
                style="?light_back"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text="건강보험"
                android:id="@+id/textView70"/>

            <TextView
                android:background="@color/material_white_1"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text=""
                android:id="@+id/txtInsurance2"/>
          </LinearLayout>

          <LinearLayout
              android:layout_marginRight="1dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <TextView
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginRight="1dp"
                style="?light_back"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text="장기요양보험"
                android:id="@+id/textView72"/>

            <TextView
                android:background="@color/material_white_1"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text=""
                android:id="@+id/txtInsurance3"/>
          </LinearLayout>

          <LinearLayout
              android:layout_marginRight="1dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <TextView
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginRight="1dp"
                style="?light_back"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text="고용보험"
                android:id="@+id/textView74"/>

            <TextView
                android:background="@color/material_white_1"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text=""
                android:id="@+id/txtInsurance4"/>
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

          <TextView
              android:background="@color/material_white_1"
              android:textColor="@color/light_red"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textSize="12sp"
              android:text=""
              android:id="@+id/txtInsuranceResult"/>
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_marginTop="1dp"
          android:id="@+id/lin_Result"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:layout_marginRight="1dp"
              style="?light_back"
              android:textColor="@color/dark_gray"
              android:gravity="center"
              android:layout_weight="6"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:textSize="11sp"
              android:text="공제 후 급여"
              android:id="@+id/textView67"/>

          <TextView
              android:background="@color/material_white_1"
              android:textColor="@color/dark_gray"
              android:gravity="center"
              android:layout_weight="4"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:textSize="12sp"
              android:text=""
              android:id="@+id/txtTotalresult"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>
