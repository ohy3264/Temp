<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@color/material_white_2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="fill_parent">

            <TextView
                style="?newalba_title_back"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text=""
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/txtAlbaName" />

            <ImageView
                android:layout_margin="7dp"
                android:layout_gravity="right|bottom"
                android:src="@drawable/icon_gen"
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:id="@+id/imageView4" />

        </FrameLayout>

        <LinearLayout
            android:layout_weight="8"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:text=""
                        android:textColor="@color/gray"
                        android:id="@+id/txtMemo"
                        android:layout_weight="0.89" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_margin="2dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">

                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="4dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_gray"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:singleLine="true"

                            android:id="@+id/txtMoney" />

                        <TextView
                            android:layout_marginLeft="1dp"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textColor="@color/dark_gray" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:gravity="left"
                        android:id="@+id/linRefreshTime"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_refreshtime"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:id="@+id/imageView11" />

                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/textView30"
                            android:textSize="11sp"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="휴식" />
                    </LinearLayout>

                    <LinearLayout

                        android:visibility="gone"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_vertical"
                        android:id="@+id/linNightView"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/icon_moon_work"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:textSize="11sp"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="야간" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_vertical"
                        android:id="@+id/linAddView"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/icon_addmoney"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:id="@+id/imageView13"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:textSize="11sp"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="연장" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/linGabulView"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical">

                        <ImageView
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/icon_gabulvalue"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:id="@+id/imageView12"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/txtGabulMoney"
                            android:textSize="11sp"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="가불"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/linEtc"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical">

                        <ImageView
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/icon_etcvalue"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:id="@+id/imageView7"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/txtEtc"
                            android:textSize="11sp"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="기타"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:gravity="left"
                        android:id="@+id/linWeek"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:padding="2dp"
                            android:src="@drawable/icon_week"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:id="@+id/imageView15" />

                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/textView35"
                            android:textSize="11sp"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="주휴" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:gravity="left"
                        android:id="@+id/linearLayout"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_refreshtime"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:id="@+id/imageView9" />

                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/textView37"
                            android:textSize="11sp"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="휴식" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:padding="2dp"
                        android:gravity="center_vertical|right"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="3dp"
                            android:src="@drawable/ic_av_timer_black_24dp"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:id="@+id/imageView5" />

                        <TextView
                            android:id="@+id/txtStartTime"
                            android:textSize="11sp"
                            android:textColor="@color/dark_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="-" />

                        <TextView
                            android:textSize="11sp"
                            android:textColor="@color/dark_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="~"
                            android:id="@+id/textView7"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp" />

                        <TextView
                            android:id="@+id/txtEndTime"
                            android:textSize="11sp"
                            android:textColor="@color/dark_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="-" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>