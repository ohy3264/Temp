<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

  <LinearLayout
      android:layout_gravity="center_vertical"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="12sp"
        android:textColor="@color/material_white_2"/>

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일"
        android:textSize="12sp"
        android:textColor="@color/material_white_2"/>

    <TextView
        android:layout_marginLeft="2dp"
        android:id="@+id/txtDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="12sp"
        android:textColor="@color/material_white_2"/>
  </LinearLayout>

  <LinearLayout
      android:gravity="center_vertical"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      android:orientation="horizontal">

    <ImageView
        android:src="@drawable/partly_cloudy_icon"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/img_current_temp"/>

    <TextView
        android:gravity="right"
        android:layout_weight="2"
        android:id="@+id/txtHigh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="21"
        android:textSize="12sp"
        android:textColor="@color/material_red_light"/>
    <TextView
        android:textColor="@color/material_red_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="°"/>
    <TextView
        android:gravity="right"
        android:layout_weight="2"
        android:id="@+id/txtLow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="12sp"
        android:textColor="@color/material_blue_1"/>
    <TextView
        android:textColor="@color/material_blue_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="°"/>
  </LinearLayout>
</LinearLayout>