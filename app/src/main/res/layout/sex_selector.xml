<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/refresh_container"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

  <RadioGroup
      android:checkedButton="@+id/chk_day"
      android:id="@+id/radioGroupRefresh"
      android:layout_width="140dp"
      android:layout_height="35.0dip"
      android:orientation="horizontal"
      android:paddingBottom="3.0dip"
      android:paddingTop="2.0dip">

    <RadioButton
        android:id="@+id/chk_day"
        android:layout_width="0.0px"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_check_box_left"
        android:button="@null"
        android:drawableLeft="@null"
        android:gravity="center"
        android:text="주간휴식"
        android:textSize="10sp"
        android:textColor="@drawable/selector_text_tab"/>

    <RadioButton
        android:visibility="gone"
        android:id="@+id/chk_oil_2"
        android:layout_width="0.0px"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_check_box_mid"
        android:button="@null"
        android:drawableLeft="@null"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@drawable/selector_text_tab"/>

    <RadioButton
        android:visibility="gone"
        android:id="@+id/chk_oil_3"
        android:layout_width="0.0px"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_check_box_mid"
        android:button="@null"
        android:drawableLeft="@null"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@drawable/selector_text_tab"/>

    <RadioButton
        android:id="@+id/chk_night"
        android:layout_width="0.0px"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_check_box_right"
        android:button="@null"
        android:drawableLeft="@null"
        android:gravity="center"
        android:text="야간휴식"
        android:textSize="10sp"
        android:textColor="@drawable/selector_text_tab"/>
  </RadioGroup>

</LinearLayout>