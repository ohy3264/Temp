<resources>
  <!-- Pa theme. -->
  <style name="ParentTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:textColorPrimary">@color/my_primary_text</item>
    <item name="android:textColorSecondary">@color/my_secondary_text</item>
  </style>

  <!-- Red theme. -->
  <style name="RedTheme" parent="ParentTheme">
    <item name="text_nomal">@color/my_primary_red</item>
    <item name="button_nomal">@style/btn_nomal_re</item>
    <item name="newalba_lebel_back">@color/my_primary_red</item>
    <item name="newalba_title_back">@style/alba_title_bg_re</item>
    <item name="background">@color/my_primary_red_light</item>
    <item name="colorPrimary">@color/my_primary_red</item>
    <item name="colorPrimaryDark">@color/my_primary_red_dark</item>
    <item name="colorAccent">@color/my_accent_red</item>
  </style>

  <!-- Blue theme. -->
  <style name="BlueTheme" parent="ParentTheme">
    <item name="text_nomal">@color/my_primary_blue</item>
    <item name="button_nomal">@style/btn_nomal_bl</item>
    <item name="newalba_lebel_back">@color/my_primary_blue</item>
    <item name="newalba_title_back">@style/alba_title_bg_bl</item>
    <item name="background">@color/my_primary_blue_light</item>
    <item name="colorPrimary">@color/my_primary_blue</item>
    <item name="colorPrimaryDark">@color/my_primary_blue_dark</item>
    <item name="colorAccent">@color/my_accent_blue</item>
  </style>

  <!-- Green theme. -->
  <style name="GreenTheme" parent="ParentTheme">
    <item name="text_nomal">@color/my_primary_green</item>
    <item name="button_nomal">@style/btn_nomal_gr</item>
    <item name="newalba_lebel_back">@color/my_primary_green</item>
    <item name="newalba_title_back">@style/alba_title_bg_gr</item>
    <item name="background">@color/my_primary_green_light</item>
    <item name="colorPrimary">@color/my_primary_green</item>
    <item name="colorPrimaryDark">@color/my_primary_green_dark</item>
    <item name="colorAccent">@color/my_accent_green</item>
  </style>

  <style name="AppBaseTheme" parent="ParentTheme">
  </style>
  <style name="AppTheme" parent="AppBaseTheme">
  </style>

  <!-- custom style -->
  <style name="alba_title_bg_re">
    <item name="android:background">@drawable/circleview_red</item>
  </style>
  <style name="alba_title_bg_bl">
    <item name="android:background">@drawable/circleview_blue</item>
  </style>
  <style name="alba_title_bg_gr">
    <item name="android:background">@drawable/circleview_green</item>
  </style>

  <style name="btn_nomal_re">
    <item name="android:background">@drawable/button_nomal_red</item>
  </style>
  <style name="btn_nomal_bl">
    <item name="android:background">@drawable/button_nomal_blue</item>
  </style>
  <style name="btn_nomal_gr">
    <item name="android:background">@drawable/button_nomal_green</item>
  </style>


  <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/material_white_2</item>
    <item name="android:textColorPrimary">@color/material_white_2</item>
    <item name="android:background">@color/dark_gray</item>
  </style>

  <style name="NewDialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowTitleStyle">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="Animations"/>

  <style name="Animations.PopDownMenu" parent="@style/Animations"/>

  <style name="Animations.PopDownMenu.Center" parent="@style/Animations.PopDownMenu">
    <item name="android:windowEnterAnimation">@anim/grow_from_top</item>
    <item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
  </style>

  <style name="Animations.PopDownMenu.Left" parent="@style/Animations.PopDownMenu">
    <item name="android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
    <item name="android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
  </style>

  <style name="Animations.PopDownMenu.Right" parent="@style/Animations.PopDownMenu">
    <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
    <item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
  </style>

  <style name="Animations.PopDownMenu.Reflect" parent="@style/Animations.PopDownMenu">
    <item name="android:windowEnterAnimation">@anim/pump_top</item>
    <item name="android:windowExitAnimation">@anim/disappear</item>
  </style>

  <style name="Animations.PopUpMenu" parent="@style/Animations"/>

  <style name="Animations.PopUpMenu.Center" parent="@style/Animations.PopUpMenu">
    <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
    <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
  </style>

  <style name="Animations.PopUpMenu.Left" parent="@style/Animations.PopUpMenu">
    <item name="android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
    <item name="android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
  </style>

  <style name="Animations.PopUpMenu.Right" parent="@style/Animations.PopUpMenu">
    <item name="android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
    <item name="android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
  </style>

  <style name="Animations.PopUpMenu.Reflect" parent="@style/Animations.PopUpMenu">
    <item name="android:windowEnterAnimation">@anim/pump_bottom</item>
    <item name="android:windowExitAnimation">@anim/disappear</item>
  </style>

  <!-- Progress Style -->
  <style name="ColorsCircularProgressDrawableStyle" parent="Material.Drawable.CircularProgress">
    <item name="cpd_strokeColors">@array/progress_colors</item>
  </style>



</resources>
